@model SpaLNT.Models.Spa.OrderProvider

@{
    ViewBag.Title = "CreateOrderProvider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@Styles.Render("~/Areas/Admin/Content/css/branches/create")

<style>
    .form-group {
        text-align: right;
    }
</style>
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-md-5 align-self-center">
            <h3 class="page-title">Products</h3>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Create Order Provider
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="widget-content searchable-container list">
        <div class="card card-body">
            <div class="d-flex no-block align-items-center mb-4">
                <h4 class="card-title">Create Order Provider</h4>
            </div>

            @using (Html.BeginForm("CreateOrderProvider", "ProductImport", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-horizontal">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <!--provider name-->
                                <div class="row create-product-name">
                                    <div class="col-lg-1 col-2 icon-branch-create">
                                        <svg viewBox="0 0 24 24"
                                             width="24"
                                             height="24"
                                             stroke="currentColor"
                                             stroke-width="2"
                                             fill="none"
                                             stroke-linecap="round"
                                             stroke-linejoin="round">
                                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="12" cy="7" r="4"></circle>
                                        </svg>
                                    </div>
                                    <div class="col-lg-11 col-10">
                                        <div class="form-floating mb-3">
                                            @Html.DropDownList("ProviderId", null, htmlAttributes: new { @class = "form-control" })
                                            <label for="tb-rfname">Provider Name</label>
                                        </div>
                                    </div>
                                </div>

                                <!--product description-->
                                <div class="row create-product-description">
                                    <div class="col-lg-1 col-2 icon-branch-create">
                                        <svg viewBox="0 0 24 24"
                                             width="24"
                                             height="24"
                                             stroke="currentColor"
                                             stroke-width="2"
                                             fill="none"
                                             stroke-linecap="round"
                                             stroke-linejoin="round"
                                             class="css-i6dzq1">
                                            <line x1="19" y1="5" x2="5" y2="19"></line>
                                            <circle cx="6.5" cy="6.5" r="2.5"></circle>
                                            <circle cx="17.5" cy="17.5" r="2.5"></circle>
                                        </svg>
                                    </div>
                                    <div class="col-lg-11 col-10">
                                        <div class="form-floating mb-3">
                                            @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control form-input-bg", @placeholder = "Description", @Value = "0" } })
                                            <label for="tb-rfname">Discount %</label>
                                            @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <!--product import-->
                                <div class="row create-product-import">
                                    <div class="col-lg-1 col-2 icon-branch-create">
                                        <svg viewBox="0 0 24 24"
                                             width="24"
                                             height="24"
                                             stroke="currentColor"
                                             stroke-width="2"
                                             fill="none"
                                             stroke-linecap="round"
                                             stroke-linejoin="round"
                                             class="css-i6dzq1">
                                            <path d="M12 20h9"></path>
                                            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                                        </svg>
                                    </div>
                                    <div class="col-lg-11 col-10">
                                        <div class="form-floating mb-3">
                                            @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control form-input-bg", @placeholder = "Note" } })
                                            <label for="tb-rfname">Note</label>
                                            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-default" />
                                <a class="dt-button buttons-html5 btn btn-danger mr-1" href="@Url.Action("Index","Home")">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

