@model SpaLNT.Models.Spa.Branch

@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<style>
    .icon-branch-details {
        padding-top: 6px;
    }

    .branch-name-block,
    .branch-addr-block,
    .branch-phone-block,
    .branch-email-block,
    .branch-contactvia-block {
        margin-bottom: 1rem;
    }
</style>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Branch</h4>
    <hr />
    <div class="row branch-name-block">
        <div class="col-lg-1 col-1 icon-branch-details">
            <svg viewBox="0 0 24 24"
                 width="27"
                 height="27"
                 stroke="currentColor"
                 stroke-width="2"
                 fill="none"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
        </div>
        <div class="col-lg-11 col-l1">
            <strong class="title-name">
                Name
            </strong>
            <div class="branch-name">
                @Html.DisplayFor(model => model.BranchName)
            </div>
        </div>
    </div>

    <div class="row branch-addr-block">
        <div class="col-lg-1 col-1 icon-branch-details">
            <svg width="27"
                 height="27"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
        </div>
        <div class="col-lg-11 col-l1 ">
            <strong class="title-address">
                Address
            </strong>
            <div class="branch-address">
                @Html.DisplayFor(model => model.Address)
            </div>
        </div>
    </div>

    <div class="row branch-phone-block">
        <div class="col-lg-1 col-1 icon-branch-details">
            <svg viewBox="0 0 24 24"
                 width="24"
                 height="24"
                 stroke="currentColor"
                 stroke-width="2"
                 fill="none"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72
                      12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z">
                </path>
            </svg>
        </div>
        <div class="col-lg-11 col-l1 ">
            <strong class="title-phone">
                Phone
            </strong>
            <div class="branch-phone">
                @Html.DisplayFor(model => model.Phone)
            </div>
        </div>
    </div>

    <div class="row branch-email-block">
        <div class="col-lg-1 col-1 icon-branch-details">
            <svg viewBox="0 0 24 24"
                 width="24"
                 height="24"
                 stroke="currentColor"
                 stroke-width="2"
                 fill="none"
                 stroke-linecap="round"
                 stroke-linejoin="round"
                 class="css-i6dzq1">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
        </div>
        <div class="col-lg-11 col-l1 ">
            <strong class="title-email">
                Mail
            </strong>
            <div class="branch-email">
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>
    </div>

    <div class="row branch-contactvia-block">
        <div class="col-lg-1 col-1 icon-branch-details">
            <svg viewBox="0 0 24 24"
                 width="24"
                 height="24"
                 stroke="currentColor"
                 stroke-width="2"
                 fill="none"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="16" x2="12" y2="12"></line>
                <line x1="12" y1="8" x2="12.01" y2="8"></line>
            </svg>
        </div>
        <div class="col-lg-11 col-l1 ">
            <strong class="title-contactVia">
                ContactVia
            </strong>
            <div class="branch-contactVia">
                @Html.DisplayFor(model => model.ContactVia)
            </div>
        </div>
    </div>

    <div class="row branch-code-block">
        <div class="col-lg-1 col-1 icon-branch-details">
            <svg viewBox="0 0 24 24"
                 width="24"
                 height="24"
                 stroke="currentColor"
                 stroke-width="2"
                 fill="none"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <polyline points="16 18 22 12 16 6"></polyline>
                <polyline points="8 6 2 12 8 18"></polyline>
            </svg>
        </div>
        <div class="col-lg-11 col-l1 ">
            <strong class="title-code">
                Code
            </strong>
            <div class="branch-code">
                @Html.DisplayFor(model => model.BranchCode)
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="modal-footer">
            <input type="submit" value="Delete" class="dt-button buttons-html5 btn btn-success mr-1" />
            <button type="button" class="dt-button buttons-html5 btn btn-danger mr-1" data-dismiss="modal"> Close</button>
        </div>
    }
</div>
